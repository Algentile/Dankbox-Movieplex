<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Dankbox Movieplex</title>
    
    <!-- We are conditionally including test support if the showTests
     variables has been set. -->
    {{#if showTests}}
        <link rel="stylesheet" href="/vendor/mocha.css">
    {{/if}}

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top darkNav">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li class="darkNavText"><a class="darkNavText" href="http://localhost:3000/main">Movies</a></li>
                <li class="darkNavText"><a class="darkNavText" href="http://localhost:3000/tags">Tags</a></li>
                <li class="darkNavText"><a class="darkNavText" href="http://localhost:3000/tierLists">Tier Lists</a></li>
                <li class="darkNavText"><a class="darkNavText" href="http://localhost:3000/Profile">Profile</a></li>
                <li><form class="navbar-form navbar-left" role="search" method="post" action="/search">
                    <div class="form-group">
                        <input type="text" class="form-control" name="movieSearch" placeholder="Movie Title">
                    </div>
                    <button type="submit" class="btn btn-default">Search</button>
                </form></li>
                <li><form class="navbar-form navbar-left" id="logoutForm" action="/logout" method="post">
                    <div class="form-group">
                        <button id="logout" type="submit" class="btn btn-default">Logout</button>
                    </div>
                </form></li>
            </ul>
        </div>
    </nav>
    {{{body}}}
    {{#if showTests}}
        <div id="mocha"></div>
        <script src="/vendor/mocha.js"></script>
        <script src="/vendor/chai.js"></script>
        <script>
            mocha.ui('tdd');
            var assert = chai.assert;
        </script>

        <script src="/qa/tests-global.js"></script>
        {{#if pageTestScript}}
            <script src="{{pageTestScript}}"></script>
        {{/if}}
        <script>mocha.run();</script>
    {{/if}}

    <!-- We add the jQuery library because we will be using it
     to manipulate HTML in the browser. -->
    <script src="//code.jquery.com/jquery-2.1.4.min.js"></script>

    <!-- Bootstrap js -->
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>